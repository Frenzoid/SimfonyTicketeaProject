                    <label for="password">Password</label>
                    <input type ="password" id="passwd" name ="_password" />
                </div>
                <div>
                    <div class="errores">
                    {% if error %}
                        <p>
                            {{ error.message }}
                        </p>
                    {% endif %}
                    </div>
                    <div class="submit">
                        <input type="submit" value="identificarse">
                    </div>
                </div>
            </form>
        </article>
    </section>

 {% endblock %}